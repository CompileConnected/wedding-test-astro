---
export interface Props {
	title: string
	address: string
	date: string
	time: string
	locationUrl: string
}
const { title, address, date, time, locationUrl } = Astro.props
---

<>
	<div class="grid grid-cols-1">
		<div
			data-aos="fade-down"
			data-aos-delay="0"
			class="mb-6 flex items-center gap-4 aos-init aos-animate"
		>
			<div class="h-[2px] w-full opacity-30 bg-gray-800"></div>
			<p class="text-4xl satisfy shrink-0 max-w-[60%] overflow-visible">
				<span class="overflow-visible">{title}</span>
			</p>
			<div class="h-[2px] w-full opacity-30 bg-gray-800"></div>
		</div>
		<p class="mb-1 aos-init aos-animate" data-aos="fade-up" data-aos-delay="100">
			<iconify-icon icon="mdi:calendar-blank" width="18" height="18"></iconify-icon>
			{date}
		</p>
		<p class="mb-1 aos-init aos-animate" data-aos="fade-up" data-aos-delay="100">
			<iconify-icon icon="mdi:clock-outline" width="18" height="18"></iconify-icon>
			{time}
		</p>

		<p
			class="text-base mb-1 overflow-visible aos-init aos-animate"
			data-aos="fade-up"
			data-aos-delay="100"
		>
			<iconify-icon icon="mdi:map-marker-outline" width="18" height="18"></iconify-icon>
			<span class="overflow-visible">{address}</span>
		</p>
		<div class="mt-6">
			<a
				href={locationUrl}
				type="button"
				class="outline md group relative border transition-all duration-300 inline-block outline-none active:outline-none items-center disabled:cursor-not-allowed appearance-none focus:outline-none active:ring-0 h-10 px-6 text-sm text-black hover:text-white border-black hover:bg-black rounded-full aos-init aos-animate"
				data-aos="fade-up"
				data-aos-delay="100"
				target="_blank"
				><span
					class="flex items-center h-full w-full justify-center gap-1 flex-nowrap whitespace-nowrap"
				>
					<iconify-icon icon="mdi:map" width="18" height="18"></iconify-icon>
					 Open Map</span
				></a
			>
		</div>
	</div>
</>
